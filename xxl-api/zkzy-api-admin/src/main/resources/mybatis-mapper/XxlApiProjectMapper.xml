<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xxl.api.admin.dao.IXxlApiProjectDao">

    <resultMap id="XxlApiProject" type="com.xxl.api.admin.core.model.XxlApiProject">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="desc" property="desc"/>
        <result column="base_url_product" property="baseUrlProduct"/>
        <result column="base_url_ppe" property="baseUrlPpe"/>
        <result column="base_url_qa" property="baseUrlQa"/>
        <result column="biz_id" property="bizId"/>
    </resultMap>

    <sql id="Base_Column_List">
		t.id,
		t.name,
		t.desc,
		t.base_url_product,
		t.base_url_ppe,
		t.base_url_qa,
		t.biz_id
	</sql>

    <insert id="add" parameterType="com.xxl.api.admin.core.model.XxlApiProject" useGeneratedKeys="true"
            keyProperty="id">
		INSERT INTO xxl_api_project (
			`name`,
			`desc`,
			base_url_product,
			base_url_ppe,
			base_url_qa,
			biz_id
		) VALUES (
			#{name},
			#{desc},
			#{baseUrlProduct},
			#{baseUrlPpe},
			#{baseUrlQa},
			#{bizId}
		);
	</insert>

    <update id="update" parameterType="com.xxl.api.admin.core.model.XxlApiProject">
		UPDATE xxl_api_project
		SET
			`name` = #{name},
			`desc` = #{desc},
			base_url_product = #{baseUrlProduct},
			base_url_ppe = #{baseUrlPpe},
			base_url_qa = #{baseUrlQa},
			biz_id = #{bizId}
		WHERE id = #{id}
	</update>

    <delete id="delete" parameterType="java.lang.Integer">
		DELETE FROM xxl_api_project
		WHERE id = #{id}
	</delete>

    <select id="load" parameterType="java.lang.Integer" resultMap="XxlApiProject">
        SELECT
        <include refid="Base_Column_List"/>
        FROM xxl_api_project AS t
        WHERE t.id = #{id}
    </select>


    <select id="pageList" parameterType="java.util.Map" resultMap="XxlApiProject">
        SELECT
        <include refid="Base_Column_List"/>
        FROM xxl_api_project AS t
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="name != null and name != ''">
                AND t.name like CONCAT(CONCAT('%', #{name}), '%')
            </if>
            <if test="bizId gte 0">
                AND t.biz_id = #{bizId}
            </if>
            <if test="desc != null and desc != ''">
                AND #{desc}
            </if>
        </trim>
        ORDER BY id DESC
        LIMIT #{offset}, #{pagesize}
    </select>

    <select id="pageListCount" parameterType="java.util.Map" resultType="int">
        SELECT count(1)
        FROM xxl_api_project AS t
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="name != null and name != ''">
                AND t.name like CONCAT(CONCAT('%', #{name}), '%')
            </if>
            <if test="bizId gte 0">
                AND t.biz_id = #{bizId}
            </if>
            <if test="desc != null and desc != ''">
                AND t.biz_id IN( #{desc}
            </if>
        </trim>
    </select>

    <select id="pageListForUser" resultMap="XxlApiProject" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM xxl_api_project AS t
        <if test="_parameter!=null and _parameter!=''">
            WHERE 1=1
            ${_parameter}
        </if>
    </select>

    <select id="pageListForUserCount" resultType="int" parameterType="java.lang.String">
        SELECT count(1)
        FROM xxl_api_project AS t
        <if test="_parameter!=null and _parameter!=''">
            WHERE 1=1
            ${_parameter}
        </if>
    </select>

</mapper>